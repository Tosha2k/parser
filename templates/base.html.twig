{% block body %}
    <div class="container">
        <div class="jumbotron">
            <h1>Movie rating</h1>
        </div>
        <div class="row">
            <form>
                <div class="col-lg-4">
                    <label for="rating-dae">Дата рейтинга: </label><input type="date" id="rating-dae" name="date">
                    <button class="btn btn-primary" type="submit">ok</button>
                </div>
            </form>
        </div>

        {% for category in categories %}
            <h1>{{ category.name }}</h1>
            <table class="table table-bordered sortable">

                <thead>

                <tr>
                    <th>No</th>
                    <th>Poster</th>
                    <th>Название</th>
                    <th>Расчетный балл</th>
                    <th>Голоса</th>
                    <th>Средний балл</th>

                </tr>

                </thead>

                <tbody>
                {% for movie in category.movies %}
                    <tr>
                        <td class="position">{{ movie.position }}</td>
                        <td class="poster"><img style="width: 100px;"
                                                src="http://www.world-art.ru/cinema/{{ movie.movie.img }}"></td>
                        <td class="name"><a class="movie-name" href="#"><span>{{ movie.movie.name }}</span></a></td>
                        <td class="estimatedScore">{{ movie.estimatedScore }}</td>
                        <td class="voices">{{ movie.voices }}</td>
                        <td class="averageScore">{{ movie.averageScore }}</td>
                        <td style="display: none" class="shortDesc">{{ movie.movie.shortDescription }}</td>
                    </tr>
                {% endfor %}

                </tbody>

            </table>
        {% endfor %}

